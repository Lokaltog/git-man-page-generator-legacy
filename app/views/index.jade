doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='Content-Type', content='text/html;charset=utf-8')
		title Baba: git man page generator
		link(rel='stylesheet', href='static/css/main.css', type='text/css')

	body
		header
			h1
				span.command-name
				span.manual-title Git Manual

			ul#actions
				li
					button#refresh Generate new man page

		section#contents
			h1 Name
			.block
				#name
					span.command-name
					span.command-action

			h1 Synopsis
			.block
				#synopsis
					span.command-name
					span.command-arguments

			h1 Description
			.block
				#description
					p.command-description
					.contents

			h1 Options
			.block
				dl#options

			h1 See also
			.block
				ul#see-also

		footer
			p Created by
				= ' '
				a(href='https://github.com/Lokaltog') Lokaltog
				= ' - '
				a(href='https://github.com/Lokaltog/baba-git-man-page-generator') GitHub repo

			p Inspired by
				= ' '
				a(href='http://www.reddit.com/user/InconsolableCellist/') InconsolableCellist's
				= ' '
				a(href='http://www.antichipotle.com/git/') Markov Chain-based generator

