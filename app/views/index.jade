doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='Content-Type', content='text/html;charset=utf-8')
		title Git man page generator
		link(rel='stylesheet', href='static/css/main.css?__inline=true', type='text/css')

	body
		.disclaimer This is NOT real git documentation! Read carefully, and click the button to generate a new man page.

		header
			h1
				Git man page generator

			ul#actions
				li
					a#permalink(href='#') Permalink
				li
					button#refresh Generate new man page

		section#contents
			h1 Name
			.block
				#name
					span.command-name
					span.command-action

			h1 Synopsis
			.block
				#synopsis
					span.command-name
					span.command-arguments

			h1 Description
			.block
				#description
					p.command-description
					.contents

			h1 Options
			.block
				dl#options

			h1 See also
			.block
				ul#see-also

		footer
			p Created by
				= ' '
				a(href='https://github.com/Lokaltog') Lokaltog
				= ' - '
				a(href='https://github.com/Lokaltog/baba-git-man-page-generator') GitHub repo

